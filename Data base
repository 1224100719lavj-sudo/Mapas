package com.tudominio.doloreshidalgoturismo.data.database

import android.content.Context
import androidx.room.Database
import androidx.room.Room
import androidx.room.RoomDatabase
import com.tudominio.doloreshidalgoturismo.data.dao.PlaceDao
import com.tudominio.doloreshidalgoturismo.data.model.PlaceEntity

@Database(entities = [PlaceEntity::class], version = 1, exportSchema = false)
abstract class AppDatabase : RoomDatabase() {
    abstract fun placeDao(): PlaceDao

    companion object {
        @Volatile
        private var INSTANCE: AppDatabase? = null

        fun getDatabase(context: Context): AppDatabase {
            return INSTANCE ?: synchronized(this) {
                val instance = Room.databaseBuilder(
                    context.applicationContext,
                    AppDatabase::class.java,
                    "dolores_hidalgo_tourism_db"
                ).build()
                INSTANCE = instance
                instance
            }
        }
    }
}
